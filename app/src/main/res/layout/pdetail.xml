<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/safe_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header_bg_sel"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_button_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/safe_back"
            android:background="@drawable/home_bottom_split" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/common_head_back"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_head_title"
                style="@style/common_text_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="产 品 详 细 介 绍" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical" >

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="22dp"
                android:background="#FF4500"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/root1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:padding="0dp" >

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0" />

                    <LinearLayout
                        android:id="@+id/l3"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/introductiontitle"
                            android:layout_width="fill_parent"
                            android:layout_height="18dp"
                            android:text="简 介："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/introduction"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/root2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:background="#FF4500"
                    android:text=" 产 品 特 点："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/feature"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/guige"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:background="#FF4500"
                    android:text=" 规 格 指 标："
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/featuretitle"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp"
                    android:background="#FF4500"
                    android:text=" 性 能："
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>