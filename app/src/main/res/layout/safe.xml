<LinearLayout
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:background="#ffffff"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android" android:weightSum="1">
 <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/safe_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header_bg_sel"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_button_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/safe_back"
            android:background="@drawable/home_bottom_split" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/common_head_back"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_head_title"
                style="@style/common_text_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="轮 胎 小 知 识"/>
        </LinearLayout>
    </RelativeLayout>
  <ScrollView
      android:layout_width="fill_parent"  
      android:layout_height="fill_parent"  
      android:fadingEdge="vertical">  
 <LinearLayout 
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
   <LinearLayout 
      android:id="@+id/root1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="horizontal" >  
     <LinearLayout
         android:id="@+id/root11"
         android:layout_width="120dp"
         android:layout_height="fill_parent"
         android:layout_marginTop="0dp"
         android:layout_weight="1"
         android:orientation="vertical" >

         <LinearLayout
             android:id="@+id/root111"
             android:layout_width="fill_parent"
             android:layout_height="42dp"
             android:layout_marginTop="0dp"
             android:orientation="horizontal" >
             <TextView
                 android:id="@+id/title1"
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:layout_marginLeft="8dp"
                 android:layout_marginTop="8dp"
                 android:gravity="center"
                 android:text="轮胎保养贴士"
                 android:textColor="@color/black"
                 android:textSize="12pt"
                 android:textStyle="bold" />
         </LinearLayout>

         <View
             android:layout_width="fill_parent"
             android:layout_height="6dip"
             android:background="#FF909090" />
     </LinearLayout>

     
   </LinearLayout>  
     <RelativeLayout
             android:id="@+id/root2"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="horizontal" >

       <ListView
           android:id="@+id/safelist1"
           android:layout_width="fill_parent"
           android:layout_height="525dp"
           android:divider="#FF4500"
           android:dividerHeight="1dp"
           android:padding="0dp" >
         </ListView>          
   </RelativeLayout>
   <LinearLayout
         android:id="@+id/root12"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_marginLeft="0dp"
         android:layout_weight="1"
         android:orientation="vertical"
         android:padding="0dp" >

        <LinearLayout
             android:id="@+id/root112"
             android:layout_width="fill_parent"
             android:layout_height="42dp"
             android:orientation="horizontal" >

             <TextView
                 android:id="@+id/title2"
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:layout_marginLeft="8dp"
                 android:layout_marginTop="8dp"
                 android:gravity="center"
                 android:text="正确更换轮胎"
                 android:textColor="@color/black"
                 android:textSize="12pt"
                 android:textStyle="bold" />
         </LinearLayout>

         <View
             android:layout_width="fill_parent"
             android:layout_height="6dip"
             android:background="#FF909090" />
     </LinearLayout>
     <RelativeLayout
             android:id="@+id/root22"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="horizontal" >
      
         <ListView
             android:id="@+id/safelist2"
             android:layout_width="fill_parent"
             android:layout_height="364dp"
             android:divider="#FF4500"
             android:dividerHeight="1dp"
             android:textColor="#1E1E1E"
             android:padding="0dp" >

         </ListView>          
   </RelativeLayout>
  </LinearLayout>
 </ScrollView>
</LinearLayout>
