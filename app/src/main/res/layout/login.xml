<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/flight_list_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/login_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header_bg_sel"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_button_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/login_back"
            android:background="@drawable/home_bottom_split" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/common_head_back"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_head_title"
                style="@style/common_text_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="登录" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blockbg_hotel_detail"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/login_account"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:background="@color/transparent"
                    android:hint="@string/login_account_hint2"
                    android:inputType="number"
                    android:paddingLeft="16.0dip"
                    android:textColor="@color/common_black" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/split_line" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:background="@color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingLeft="16.0dip"
                    android:textColor="@color/common_black" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/split_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_login"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="16.0dip"
                android:layout_marginTop="16.0dip"
                android:background="@drawable/groupon_order_fillin_confirm"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="@color/common_white"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/login_regist_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_regist"
                android:gravity="left|center_vertical"
                android:text="尚未注册？点此注册"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black_red" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>