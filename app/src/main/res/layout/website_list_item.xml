<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wdlist_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#FCFCFC"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/namelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_uname0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="网点名称:"
                    android:textColor="@color/black"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/tv_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="名称"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namelayout"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_address0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="网点地址:"
                    android:textColor="@color/black"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="地址"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>
  <LinearLayout
                android:id="@+id/playout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alayout"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_phone0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="双星热线:"
                    android:textColor="@color/black"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4000176666"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>