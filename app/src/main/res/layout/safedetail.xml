<LinearLayout
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:background="#ffffff"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android" android:weightSum="1">
 <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/safe_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header_bg_sel"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_button_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/safe_back"
            android:background="@drawable/home_bottom_split" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/common_head_back"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_head_title"
                style="@style/common_text_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="轮 胎 小 知 识"/>
        </LinearLayout>
    </RelativeLayout>
  <ScrollView
      android:layout_width="fill_parent"  
      android:layout_height="fill_parent"  
      android:fadingEdge="vertical">  
 <LinearLayout 
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj"
    android:orientation="vertical" >
          
         <LinearLayout
             android:id="@+id/root1"
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:layout_marginTop="0dp"
             android:background="#F0F8FF"
             android:orientation="horizontal" >

             <ImageView
                 android:id="@+id/image"
                 android:layout_width="36dp"
                 android:layout_height="28dp"
                 android:layout_marginLeft="3dp"
                 android:layout_marginTop="2dp"
               
                 android:src="@drawable/monkey" />

             <TextView
                 android:id="@+id/name"
                 android:layout_width="fill_parent"
                 android:layout_height="22dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="6dp"
                 android:textSize="10pt"
                 android:textStyle="bold"
                 android:textColor="@color/black" />
         </LinearLayout>

         <TextView
             android:id="@+id/content"
             android:layout_width="fill_parent"
             android:layout_height="378dp"
             android:layout_marginTop="1dp"
             android:background="@drawable/bj"
             android:textColor="@color/black" />
  
  </LinearLayout>
 </ScrollView>
</LinearLayout>

