<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ask_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header_bg_sel"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_button_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/ask_back"
            android:background="@drawable/home_bottom_split" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/ask_back"
            android:layout_toLeftOf="@+id/bt_ask"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_head_title"
                style="@style/common_text_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="提问"/>
        </LinearLayout>
        <Button 
        android:textColor="#ffffff"
        android:background="@drawable/head_button_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/bt_ask"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"/>
    </RelativeLayout>
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
		 <EditText 
		 	android:layout_margin="10dp"
	        android:id="@+id/et_mail"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="请输入邮箱"/>
	    <EditText 
	    	android:layout_margin="10dp"
	        android:id="@+id/et_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="请输入标题"/>
	    <EditText 
	    	android:layout_margin="10dp"
	        android:id="@+id/et_content"
	        android:lines="5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="请输入内容"/>
	   
	    
	    
	</LinearLayout>
	
	
	
</LinearLayout>