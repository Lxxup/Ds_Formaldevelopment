<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/flight_list_bg">
    
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/wdsearch03_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header_bg_sel"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_button_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/wdsearch03_back"
            android:background="@drawable/home_bottom_split" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="网点查询"
                android:textSize="25sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>
   <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        
        android:background="#C7C7C7"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/table1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:stretchColumns="1" >

            <TableRow android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    
                    android:text="经销商全称 :"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:id="@+id/tv_sellername"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:selectAllOnFocus="true"
                    android:textSize="16sp" 
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="代理品牌 :"
                     android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/tv_band"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="法人代表 :"
                     android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/tv_representative"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="电话 :"
                     android:textColor="#000000"
                    android:textSize="16sp" 
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_phone1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                     />
            </TableRow>

            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="轮胎市场负责人 :"
                     android:textColor="#000000"
                    android:textSize="16sp" 
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_manager"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp" 
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="电话 :"
                     android:textColor="#000000"
                    android:textSize="16sp" 
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_phone2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="不良胎处理负责人 :"
                     android:textColor="#000000"
                    android:textSize="16sp" 
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_xmanager"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp" 
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="电话 :"
                     android:textColor="#000000"
                    android:textSize="16sp" 
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_phone3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="备注 :"
                     android:textColor="#000000"
                    android:textSize="16sp" 
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:layout_marginRight="8dp"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>
